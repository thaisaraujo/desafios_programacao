#include<iostream>
#include<bits/stdc++.h>
#include<vector>
#include<math.h>
using namespace std;


int main(){
    int n, d, m, gafx, gafy;
    int soma, dif;
    
    cin >> n >> d;
    cin >> m; 
    
    
    while(m--){
        cin >> gafx >> gafy;
        
        soma = gafx+gafy;
        dif = gafx-gafy;
        
        if((soma >= d && soma <=(2*n-d)) && (dif>=-d && dif<=d)){
            cout << "YES" << endl;
        }else{
            cout << "NO" << endl;
        }

    }
    
    return 0;
}
